<div class="section" id="create-transaction-section">
    <h2>Create Transaction</h2>

    <form id="createTransactionForm" method="post" action="{{ action|default('') }}" data-api="{{ api_base|default('/api/harmony') }}">

        <div class="form-group">
            <label for="txAccountNumber">Account Number (Encrypted)</label>
            <input type="text" id="txAccountNumber" name="txAccountNumber" value="{{ txAccountNumber|default('1234567890') }}" required>
        </div>

        <div class="form-group">
            <label for="amount">Amount (Encrypted Range Query)</label>
            <input type="number" id="amount" name="amount" value="{{ amount|default(1500) }}" step="0.01" required>
        </div>

        <div class="form-group">
            <label for="transactionType">Transaction Type</label>
            <select id="transactionType" name="transactionType" required>
                <option value="withdrawal" {% if transactionType is defined and transactionType == 'withdrawal' %}selected{% endif %}>Withdrawal</option>
                <option value="deposit" {% if transactionType is defined and transactionType == 'deposit' %}selected{% endif %}>Deposit</option>
                <option value="transfer" {% if transactionType is defined and transactionType == 'transfer' %}selected{% endif %}>Transfer</option>
            </select>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" id="description" name="description" value="{{ description|default('ATM withdrawal') }}" required>
        </div>

        <div class="form-group">
            <label for="cardNumber">Card Number (Encrypted)</label>
            <input type="text" id="cardNumber" name="cardNumber" value="{{ cardNumber|default('4111111111111111') }}">
        </div>

        <div class="form-group">
            <label for="cvv">CVV (Encrypted)</label>
            <input type="text" id="cvv" name="cvv" value="{{ cvv|default('123') }}">
        </div>

        <div class="form-group">
            <label for="expiryDate">Expiry Date (Encrypted)</label>
            <input type="text" id="expiryDate" name="expiryDate" value="{{ expiryDate|default('12/25') }}">
        </div>

        <div class="form-group">
            <label for="merchantName">Merchant Name</label>
            <input type="text" id="merchantName" name="merchantName" value="{{ merchantName|default('Local ATM') }}" required>
        </div>

        <button type="submit">Create Transaction</button>
    </form>

    <div id="createTransactionResult" class="result" style="display: none;"></div>
</div>
