{# templates/forms/create_account.html.twig #}
<div class="section" id="create-account-section">
    <h2>Create Account</h2>

    <form id="createAccountForm" method="post" action="{{ action|default('') }}" data-api="{{ api_base|default('/api/harmony') }}">
        <div class="form-group">
            <label for="customerName">Customer Name</label>
            <input type="text" id="customerName" name="customerName" value="{{ customerName|default('John Doe') }}" required>
        </div>

        <div class="form-group">
            <label for="accountNumber">Account Number (Encrypted)</label>
            <input type="text" id="accountNumber" name="accountNumber" value="{{ accountNumber|default('1234567890') }}" required>
        </div>

        <div class="form-group">
            <label for="balance">Balance (Encrypted Range Query)</label>
            <input type="number" id="balance" name="balance" value="{{ balance|default(50000) }}" step="0.01" required>
        </div>

        <div class="form-group">
            <label for="ssn">SSN (Encrypted)</label>
            <input type="text" id="ssn" name="ssn" value="{{ ssn|default('123-45-6789') }}" required>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="{{ email|default('john.doe@example.com') }}" required>
        </div>

        <button type="submit">Create Account</button>
    </form>

    <div id="createAccountResult" class="result" style="display: none;"></div>
</div>
